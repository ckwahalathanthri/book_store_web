@model BookStoreEcommerce.Models.ViewModels.CustomerDetailViewModel
@{
    ViewData["Title"] = $"Customer Details - {Model.FullName}";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Customer Details</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>

<div class="row">
    <!-- Customer Information -->
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-user"></i> Customer Information</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-5">Name:</dt>
                    <dd class="col-sm-7">@Model.FullName</dd>
                    
                    <dt class="col-sm-5">Email:</dt>
                    <dd class="col-sm-7">@Model.Email</dd>
                    
                    <dt class="col-sm-5">Phone:</dt>
                    <dd class="col-sm-7">@(Model.Phone ?? "N/A")</dd>
                    
                    <dt class="col-sm-5">Address:</dt>
                    <dd class="col-sm-7">@(Model.Address ?? "N/A")</dd>
                    
                    @if (Model.DateOfBirth.HasValue)
                    {
                        <dt class="col-sm-5">Birth Date:</dt>
                        <dd class="col-sm-7">@Model.DateOfBirth.Value.ToString("MMM dd, yyyy")</dd>
                    }
                    
                    @if (Model.Gender.HasValue)
                    {
                        <dt class="col-sm-5">Gender:</dt>
                        <dd class="col-sm-7">@Model.Gender</dd>
                    }
                    
                    <dt class="col-sm-5">Registration:</dt>
                    <dd class="col-sm-7">@Model.RegistrationDate.ToString("MMM dd, yyyy")</dd>
                    
                    <dt class="col-sm-5">Status:</dt>
                    <dd class="col-sm-7">
                        <span class="badge bg-@(Model.IsActive ? "success" : "danger")">
                            @(Model.IsActive ? "Active" : "Inactive")
                        </span>
                    </dd>
                </dl>
                
                <div class="mt-3">
                    <button type="button" class="btn btn-warning btn-sm w-100" 
                            onclick="toggleCustomerStatus(@Model.UserId, @Model.IsActive.ToString().ToLower())">
                        <i class="fas fa-@(Model.IsActive ? "ban" : "check")"></i>
                        @(Model.IsActive ? "Deactivate" : "Activate") Customer
                    </button>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Order Statistics -->
    <div class="col-md-8">
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card bg-primary text-white">
                    <div class="card-body text-center">
                        <h4>@Model.TotalOrders</h4>
                        <p class="mb-0">Total Orders</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-success text-white">
                    <div class="card-body text-center">
                        <h4>$@Model.TotalSpent.ToString("F2")</h4>
                        <p class="mb-0">Total Spent</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-info text-white">
                    <div class="card-body text-center">
                        <h4>$@Model.AverageOrderValue.ToString("F2")</h4>
                        <p class="mb-0">Avg Order Value</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-warning text-white">
                    <div class="card-body text-center">
                        <h4>@Model.PendingOrders</h4>
                        <p class="mb-0">Pending Orders</p>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Order History -->
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-shopping-cart"></i> Order History</h5>
            </div>
            <div class="card-body">
                @if (Model.Orders.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Order #</th>
                                    <th>Date</th>
                                    <th>Amount</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in Model.Orders.Take(10))
                                {
                                    <tr>
                                        <td>@order.OrderNumber</td>
                                        <td>@order.OrderDate.ToString("MMM dd, yyyy")</td>
                                        <td>$@order.TotalAmount</td>
                                        <td>
                                            <span class="badge bg-@(order.OrderStatus switch {
                                                OrderStatus.Pending => "warning",
                                                OrderStatus.Processing => "info",
                                                OrderStatus.Shipped => "primary",
                                                OrderStatus.Delivered => "success",
                                                OrderStatus.Cancelled => "danger",
                                                _ => "secondary"
                                            })">
                                                @order.OrderStatus
                                            </span>
                                        </td>
                                        <td>
                                            <a asp-area="Admin" asp-controller="OrderManagement" asp-action="Details" asp-route-id="@order.OrderId" 
                                               class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-eye"></i> View
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    
                    @if (Model.Orders.Count > 10)
                    {
                        <div class="text-center mt-3">
                            <p class="text-muted">Showing 10 of @Model.Orders.Count orders</p>
                            <a asp-area="Admin" asp-controller="OrderManagement" asp-action="Index" asp-route-customerId="@Model.CustomerId" 
                               class="btn btn-outline-primary">View All Orders</a>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-shopping-cart fa-2x text-muted mb-2"></i>
                        <p class="text-muted">No orders found for this customer.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function toggleCustomerStatus(customerId, isCurrentlyActive) {
            const action = isCurrentlyActive ? 'deactivate' : 'activate';
            const message = `Are you sure you want to ${action} this customer?`;
            
            if (confirm(message)) {
                $.post('@Url.Action("ToggleStatus")', { id: customerId }, function(data) {
                    if (data.success) {
                        alert(data.message);
                        location.reload();
                    } else {
                        alert('Error: ' + data.message);
                    }
                }).fail(function() {
                    alert('An error occurred while updating customer status.');
                });
            }
        }
    </script>
}