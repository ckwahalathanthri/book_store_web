@model BookStoreEcommerce.Models.ViewModels.CustomerDetailViewModel
@{
    ViewData["Title"] = "Delete Customer - " + Model.FullName;
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2 text-danger">
        <i class="fas fa-user-times me-2"></i>
        Delete Customer
    </h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <a asp-action="Details" asp-route-id="@Model.UserId" class="btn btn-sm btn-outline-info">
                <i class="fas fa-eye me-1"></i> View Details
            </a>
            <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
                <i class="fas fa-arrow-left me-1"></i> Back to List
            </a>
        </div>
    </div>
</div>

<!-- Danger Alert -->
<div class="row mb-4">
    <div class="col-12">
        <div class="alert alert-danger" role="alert">
            <div class="d-flex align-items-center">
                <i class="fas fa-exclamation-triangle fa-3x me-3"></i>
                <div>
                    <h4 class="alert-heading mb-2">⚠️ CRITICAL: Customer Data Deletion</h4>
                    <p class="mb-1">You are about to permanently delete this customer and all associated personal data. This action <strong>CANNOT BE UNDONE</strong>.</p>
                    <p class="mb-0">This operation complies with data protection regulations but will permanently remove customer information from the system.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- GDPR Compliance Notice -->
<div class="row mb-4">
    <div class="col-12">
        <div class="alert alert-info" role="alert">
            <div class="d-flex align-items-center">
                <i class="fas fa-shield-alt fa-2x me-3"></i>
                <div>
                    <h6 class="alert-heading mb-1">Data Protection Compliance</h6>
                    <p class="mb-0">This deletion process follows data protection guidelines. Historical order data will be anonymized rather than deleted to maintain business records integrity.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Impact Analysis -->
@{
    var totalOrders = Model.TotalOrders;
    var totalSpent = Model.TotalSpent;
    var pendingOrders = Model.PendingOrders;
    var completedOrders = Model.CompletedOrders;
    var totalReviews = Model.Orders.SelectMany(o => o.OrderDetails).SelectMany(od => od.Book.Feedbacks).Count(f => f.CustomerId == Model.CustomerId);
}

<div class="row mb-4">
    <div class="col-12">
        <div class="card border-warning">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0">
                    <i class="fas fa-chart-line me-2"></i>
                    Data Deletion Impact Analysis
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3 text-center mb-3">
                        <div class="border rounded p-3 @(totalOrders > 0 ? "border-warning bg-light" : "")">
                            <i class="fas fa-shopping-cart fa-2x @(totalOrders > 0 ? "text-warning" : "text-muted") mb-2"></i>
                            <h4 class="mb-0 @(totalOrders > 0 ? "text-warning" : "text-muted")">@totalOrders</h4>
                            <small class="@(totalOrders > 0 ? "text-warning" : "text-muted")">Total Orders</small>
                            @if (totalOrders > 0)
                            {
                                <div class="mt-1">
                                    <small class="text-info">⚠️ Will be anonymized</small>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="col-md-3 text-center mb-3">
                        <div class="border rounded p-3 @(pendingOrders > 0 ? "border-danger bg-light" : "")">
                            <i class="fas fa-clock fa-2x @(pendingOrders > 0 ? "text-danger" : "text-muted") mb-2"></i>
                            <h4 class="mb-0 @(pendingOrders > 0 ? "text-danger" : "text-muted")">@pendingOrders</h4>
                            <small class="@(pendingOrders > 0 ? "text-danger" : "text-muted")">Pending Orders</small>
                            @if (pendingOrders > 0)
                            {
                                <div class="mt-1">
                                    <small class="text-danger">⚠️ Require attention</small>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="col-md-3 text-center mb-3">
                        <div class="border rounded p-3 @(totalReviews > 0 ? "border-danger bg-light" : "")">
                            <i class="fas fa-star fa-2x @(totalReviews > 0 ? "text-danger" : "text-muted") mb-2"></i>
                            <h4 class="mb-0 @(totalReviews > 0 ? "text-danger" : "text-muted")">@totalReviews</h4>
                            <small class="@(totalReviews > 0 ? "text-danger" : "text-muted")">Reviews/Feedback</small>
                            @if (totalReviews > 0)
                            {
                                <div class="mt-1">
                                    <small class="text-danger">⚠️ Will be deleted</small>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="col-md-3 text-center mb-3">
                        <div class="border rounded p-3 @(totalSpent > 0 ? "border-info bg-light" : "")">
                            <i class="fas fa-dollar-sign fa-2x @(totalSpent > 0 ? "text-info" : "text-muted") mb-2"></i>
                            <h4 class="mb-0 @(totalSpent > 0 ? "text-info" : "text-muted")">$@totalSpent.ToString("F0")</h4>
                            <small class="@(totalSpent > 0 ? "text-info" : "text-muted")">Total Spent</small>
                            @if (totalSpent > 0)
                            {
                                <div class="mt-1">
                                    <small class="text-info">Lifetime Value</small>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                
                @if (totalOrders > 0 || totalReviews > 0 || pendingOrders > 0)
                {
                    <div class="alert alert-warning mt-3 mb-0">
                        <h6 class="alert-heading">⚠️ Data Processing Notice:</h6>
                        <ul class="mb-0">
                            @if (totalOrders > 0)
                            {
                                <li><strong>Order History:</strong> @totalOrders orders will be anonymized (customer info removed, order data preserved for business records).</li>
                            }
                            @if (pendingOrders > 0)
                            {
                                <li><strong>Pending Orders:</strong> @pendingOrders active orders must be completed or cancelled before deletion.</li>
                            }
                            @if (totalReviews > 0)
                            {
                                <li><strong>Reviews:</strong> All @totalReviews customer reviews will be permanently deleted.</li>
                            }
                            <li><strong>Personal Data:</strong> All personally identifiable information will be permanently removed.</li>
                        </ul>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Left Column - Customer Information -->
    <div class="col-lg-8">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0">
                    <i class="fas fa-user me-2"></i>Customer to be Deleted
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3 text-center">
                        <div class="avatar-xl bg-light rounded-circle d-flex align-items-center justify-content-center mb-3" style="width: 120px; height: 120px; opacity: 0.7;">
                            <i class="fas fa-user fa-3x text-muted"></i>
                        </div>
                        <div class="text-danger">
                            <i class="fas fa-times-circle"></i>
                            <small>Will be deleted</small>
                        </div>
                    </div>
                    <div class="col-md-9">
                        <dl class="row">
                            <dt class="col-sm-4">Full Name:</dt>
                            <dd class="col-sm-8">
                                <h4 class="text-danger mb-0">@Model.FullName</h4>
                            </dd>
                            
                            <dt class="col-sm-4">Email:</dt>
                            <dd class="col-sm-8">
                                <h5 class="text-muted mb-0">@Model.Email</h5>
                            </dd>
                            
                            <dt class="col-sm-4">Phone:</dt>
                            <dd class="col-sm-8">@(Model.Phone ?? "Not provided")</dd>
                            
                            <dt class="col-sm-4">Address:</dt>
                            <dd class="col-sm-8">@(Model.Address ?? "Not provided")</dd>
                            
                            <dt class="col-sm-4">Registration Date:</dt>
                            <dd class="col-sm-8">@Model.RegistrationDate.ToString("MMM dd, yyyy")</dd>
                            
                            <dt class="col-sm-4">Customer Status:</dt>
                            <dd class="col-sm-8">
                                @if (Model.IsActive)
                                {
                                    <span class="badge bg-success">
                                        <i class="fas fa-check-circle me-1"></i>Active
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">
                                        <i class="fas fa-pause-circle me-1"></i>Inactive
                                    </span>
                                }
                            </dd>
                            
                            <dt class="col-sm-4">Gender:</dt>
                            <dd class="col-sm-8">@(Model.Gender?.ToString() ?? "Not specified")</dd>
                            
                            <dt class="col-sm-4">Date of Birth:</dt>
                            <dd class="col-sm-8">
                                @if (Model.DateOfBirth.HasValue)
                                {
                                    @Model.DateOfBirth.Value.ToString("MMM dd, yyyy")
                                }
                                else
                                {
                                    <span class="text-muted">Not provided</span>
                                }
                            </dd>
                        </dl>
                        
                        <!-- Customer Statistics -->
                        <hr>
                        <h6 class="text-muted">Customer Statistics:</h6>
                        <div class="row">
                            <div class="col-6">
                                <small><strong>Total Orders:</strong> @Model.TotalOrders</small><br>
                                <small><strong>Completed Orders:</strong> @Model.CompletedOrders</small><br>
                                <small><strong>Average Order Value:</strong> $@Model.AverageOrderValue.ToString("F2")</small>
                            </div>
                            <div class="col-6">
                                <small><strong>Total Spent:</strong> $@Model.TotalSpent.ToString("F2")</small><br>
                                <small><strong>Last Order:</strong> @(Model.LastOrderDate?.ToString("MMM dd, yyyy") ?? "Never")</small><br>
                                <small><strong>Customer Since:</strong> @((DateTime.Now - Model.RegistrationDate).Days) days</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Alternative Actions -->
        <div class="card mt-4 border-info">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0">
                    <i class="fas fa-lightbulb me-2"></i>Consider These Alternatives
                </h5>
            </div>
            <div class="card-body">
                <p>Instead of permanently deleting this customer, you might want to consider:</p>
                <div class="row">
                    <div class="col-md-6">
                        <div class="d-grid gap-2">
                            <button type="button" class="btn btn-outline-warning" onclick="toggleCustomerStatus(@Model.UserId, @Model.IsActive.ToString().ToLower())">
                                <i class="fas fa-@(Model.IsActive ? "pause" : "play") me-2"></i>
                                @(Model.IsActive ? "Deactivate" : "Activate") Customer
                            </button>
                            <button type="button" class="btn btn-outline-info" onclick="anonymizeCustomer()">
                                <i class="fas fa-user-secret me-2"></i>Anonymize Data
                            </button>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="d-grid gap-2">
                            <button type="button" class="btn btn-outline-secondary" onclick="exportCustomerData()">
                                <i class="fas fa-download me-2"></i>Export Customer Data
                            </button>
                            <button type="button" class="btn btn-outline-success" onclick="contactCustomer()">
                                <i class="fas fa-envelope me-2"></i>Contact Customer
                            </button>
                        </div>
                    </div>
                </div>
                <div class="alert alert-light mt-3 mb-0">
                    <small class="text-muted">
                        <i class="fas fa-info-circle me-1"></i>
                        <strong>Recommended:</strong> Deactivating preserves historical data while preventing future access. Anonymization removes personal data but keeps statistical information.
                    </small>
                </div>
            </div>
        </div>
        
        @if (pendingOrders > 0)
        {
            <!-- Pending Orders Warning -->
            <div class="card mt-4 border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>Pending Orders Require Action
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <h6 class="alert-heading">Cannot Delete Customer</h6>
                        <p class="mb-0">This customer has @pendingOrders pending order(s) that must be completed or cancelled before deletion can proceed.</p>
                    </div>
                    <div class="d-grid">
                        <a asp-controller="OrderManagement" asp-action="Index" asp-route-customerId="@Model.CustomerId" class="btn btn-primary">
                            <i class="fas fa-shopping-cart me-2"></i>Manage Pending Orders
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
    
    <!-- Right Column - Confirmation Panel -->
    <div class="col-lg-4">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0">
                    <i class="fas fa-trash me-2"></i>Confirm Customer Deletion
                </h5>
            </div>
            <div class="card-body">
                <div class="alert alert-danger">
                    <h6 class="alert-heading">⚠️ Final Warning</h6>
                    <p class="mb-0">This action will permanently:</p>
                    <ul class="mt-2 mb-0">
                        <li>Delete personal information</li>
                        <li>Remove customer reviews (@totalReviews)</li>
                        <li>Anonymize order history (@totalOrders orders)</li>
                        <li>Clear customer preferences</li>
                        <li>Revoke system access</li>
                    </ul>
                </div>
                
                @if (pendingOrders == 0)
                {
                    <form asp-action="Delete" method="post" id="deleteForm" class="mt-3">
                        <input type="hidden" asp-for="UserId" />
                        <input type="hidden" asp-for="CustomerId" />
                        
                        <div class="form-group mb-3">
                            <label for="confirmationText" class="form-label fw-bold">
                                Type "DELETE CUSTOMER" to confirm:
                            </label>
                            <input type="text" id="confirmationText" class="form-control" 
                                   placeholder="Type DELETE CUSTOMER here" autocomplete="off" required>
                            <div class="form-text text-danger">
                                You must type "DELETE CUSTOMER" exactly as shown.
                            </div>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label for="deleteReason" class="form-label fw-bold">
                                Reason for deletion:
                            </label>
                            <select id="deleteReasonSelect" class="form-select mb-2" onchange="handleReasonChange()">
                                <option value="">Select a reason...</option>
                                <option value="gdpr_request">GDPR/Data Protection Request</option>
                                <option value="customer_request">Customer Requested Deletion</option>
                                <option value="duplicate_account">Duplicate Account</option>
                                <option value="fraudulent_activity">Fraudulent Activity</option>
                                <option value="other">Other (specify below)</option>
                            </select>
                            <textarea id="deleteReason" name="deleteReason" class="form-control" rows="3" 
                                      placeholder="Additional details..." required></textarea>
                            <div class="form-text">
                                This will be logged for audit and compliance purposes.
                            </div>
                        </div>
                        
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" id="confirmDataProtection" required>
                            <label class="form-check-label" for="confirmDataProtection">
                                I confirm this deletion complies with data protection regulations
                            </label>
                        </div>
                        
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" id="confirmUnderstanding" required>
                            <label class="form-check-label" for="confirmUnderstanding">
                                I understand this action cannot be undone
                            </label>
                        </div>
                        
                        <div class="form-check mb-4">
                            <input class="form-check-input" type="checkbox" id="confirmBackup" required>
                            <label class="form-check-label" for="confirmBackup">
                                I have exported necessary data for compliance
                            </label>
                        </div>
                        
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger btn-lg" id="deleteButton" disabled>
                                <i class="fas fa-user-times me-2"></i>
                                DELETE CUSTOMER PERMANENTLY
                            </button>
                            <a asp-action="Details" asp-route-id="@Model.UserId" class="btn btn-outline-info">
                                <i class="fas fa-eye me-2"></i>Review Customer Details
                            </a>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-times me-2"></i>Cancel
                            </a>
                        </div>
                    </form>
                }
                else
                {
                    <div class="alert alert-danger">
                        <h6 class="alert-heading">Deletion Blocked</h6>
                        <p class="mb-0">Customer deletion is not possible while there are pending orders. Please resolve all pending orders first.</p>
                    </div>
                    <div class="d-grid gap-2">
                        <a asp-controller="OrderManagement" asp-action="Index" asp-route-customerId="@Model.CustomerId" class="btn btn-primary">
                            <i class="fas fa-shopping-cart me-2"></i>Manage Orders
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-times me-2"></i>Cancel
                        </a>
                    </div>
                }
            </div>
        </div>
        
        <!-- System Information -->
        <div class="card mt-4">
            <div class="card-header bg-light">
                <h6 class="mb-0">
                    <i class="fas fa-info-circle me-2"></i>System Information
                </h6>
            </div>
            <div class="card-body">
                <dl class="row small">
                    <dt class="col-sm-6">Customer ID:</dt>
                    <dd class="col-sm-6">#@Model.CustomerId</dd>
                    
                    <dt class="col-sm-6">User ID:</dt>
                    <dd class="col-sm-6">#@Model.UserId</dd>
                    
                    <dt class="col-sm-6">Registered:</dt>
                    <dd class="col-sm-6">@Model.RegistrationDate.ToString("MMM dd, yyyy")</dd>
                    
                    <dt class="col-sm-6">Last Login:</dt>
                    <dd class="col-sm-6">@Model.LastLoginDate.ToString("MMM dd, yyyy")</dd>
                    
                    <dt class="col-sm-6">Days Active:</dt>
                    <dd class="col-sm-6">@((DateTime.Now - Model.RegistrationDate).Days) days</dd>
                </dl>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Enable delete button only when all conditions are met
            function checkFormValidity() {
                const confirmationText = $('#confirmationText').val();
                const deleteReason = $('#deleteReason').val().trim();
                const confirmDataProtection = $('#confirmDataProtection').is(':checked');
                const confirmUnderstanding = $('#confirmUnderstanding').is(':checked');
                const confirmBackup = $('#confirmBackup').is(':checked');
                
                const isValid = confirmationText === 'DELETE CUSTOMER' && 
                               deleteReason.length > 0 && 
                               confirmDataProtection && 
                               confirmUnderstanding && 
                               confirmBackup;
                
                $('#deleteButton').prop('disabled', !isValid);
                
                // Visual feedback
                if (confirmationText === 'DELETE CUSTOMER') {
                    $('#confirmationText').removeClass('is-invalid').addClass('is-valid');
                } else if (confirmationText.length > 0) {
                    $('#confirmationText').removeClass('is-valid').addClass('is-invalid');
                } else {
                    $('#confirmationText').removeClass('is-valid is-invalid');
                }
            }
            
            // Bind event handlers
            $('#confirmationText, #deleteReason').on('input', checkFormValidity);
            $('#confirmDataProtection, #confirmUnderstanding, #confirmBackup').on('change', checkFormValidity);
            
            // Form submission confirmation
            $('#deleteForm').on('submit', function(e) {
                if (!confirm('ARE YOU ABSOLUTELY SURE? This will permanently delete the customer data and cannot be undone!')) {
                    e.preventDefault();
                    return false;
                }
                
                // Show loading state
                $('#deleteButton').prop('disabled', true).html('<i class="fas fa-spinner fa-spin me-2"></i>Deleting Customer...');
            });
            
            // Auto-focus on confirmation text
            $('#confirmationText').focus();
        });
        
        // Handle reason selection
        function handleReasonChange() {
            const reasonSelect = $('#deleteReasonSelect').val();
            const reasonText = $('#deleteReason');
            
            if (reasonSelect && reasonSelect !== 'other') {
                reasonText.val($('#deleteReasonSelect option:selected').text());
            } else {
                reasonText.val('');
            }
            
            checkFormValidity();
        }
        
        // Alternative action functions
        function toggleCustomerStatus(userId, isCurrentlyActive) {
            const action = isCurrentlyActive ? 'deactivate' : 'activate';
            const message = `${action.charAt(0).toUpperCase() + action.slice(1)} this customer instead of deleting?`;
            
            if (confirm(message)) {
                $.post('@Url.Action("ToggleStatus", "CustomerManagement")', { id: userId }, function(data) {
                    if (data.success) {
                        showAlert(`Customer ${action}d successfully! Redirecting...`, 'success');
                        setTimeout(function() {
                            window.location.href = '@Url.Action("Index", "CustomerManagement")';
                        }, 2000);
                    } else {
                        showAlert('Error: ' + data.message, 'danger');
                    }
                }).fail(function() {
                    showAlert('An error occurred while updating customer status.', 'danger');
                });
            }
        }
        
        function anonymizeCustomer() {
            if (confirm('Anonymize customer data instead of deletion? This will remove personal information but preserve statistical data.')) {
                showAlert('Customer anonymization feature coming soon!', 'info');
                // This would call an anonymization endpoint
                // $.post('@Url.Action("Anonymize", "CustomerManagement")', { id: @Model.UserId }, ...);
            }
        }
        
        function exportCustomerData() {
            showAlert('Generating customer data export...', 'info');
            // This would trigger a data export
            window.location.href = '@Url.Action("ExportCustomerData", "CustomerManagement", new { id = Model.UserId })';
        }
        
        function contactCustomer() {
            showAlert('Customer communication feature coming soon!', 'info');
        }
        
        // Alert helper function
        function showAlert(message, type = 'info') {
            const alertClass = `alert-${type}`;
            const iconClass = type === 'danger' ? 'fa-exclamation-triangle' : 
                             type === 'success' ? 'fa-check-circle' : 'fa-info-circle';
            
            const alert = $(`
                <div class="alert ${alertClass} alert-dismissible fade show" role="alert">
                    <i class="fas ${iconClass} me-2"></i>
                    ${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            `);
            
            $('.border-bottom').after(alert);
            setTimeout(() => alert.alert('close'), 5000);
            $('html, body').animate({ scrollTop: 0 }, 500);
        }
    </script>
    
    <style>
        .avatar-xl {
            width: 120px;
            height: 120px;
        }
        
        .text-justify {
            text-align: justify;
        }
        
        .card {
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            border: 1px solid rgba(0, 0, 0, 0.125);
        }
        
        .card-header {
            font-weight: 600;
            border-bottom: 1px solid rgba(0, 0, 0, 0.125);
        }
        
        .border-danger {
            border-color: #dc3545 !important;
        }
        
        .border-warning {
            border-color: #ffc107 !important;
        }
        
        .border-info {
            border-color: #0dcaf0 !important;
        }
        
        .btn-danger:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }
        
        .is-valid {
            border-color: #198754;
        }
        
        .is-invalid {
            border-color: #dc3545;
        }
        
        .alert {
            border: none;
            border-radius: 0.5rem;
        }
        
        .badge {
            font-size: 0.875em;
        }
        
        dt {
            font-weight: 600;
            color: #495057;
        }
        
        dd {
            margin-bottom: 0.5rem;
        }
        
        .form-text {
            font-size: 0.875em;
        }
        
        .btn-lg {
            padding: 0.75rem 1.5rem;
            font-size: 1.1rem;
            font-weight: 600;
        }
        
        .alert-heading {
            font-weight: 600;
        }
        
        .form-check-input:checked {
