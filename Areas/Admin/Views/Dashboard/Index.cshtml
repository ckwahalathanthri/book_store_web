@model BookStoreEcommerce.Models.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">
        <i class="fas fa-tachometer-alt me-2"></i>
        Dashboard
    </h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <button type="button" class="btn btn-sm btn-outline-secondary">
                <i class="fas fa-calendar-alt"></i> Today: @DateTime.Now.ToString("MMM dd, yyyy")
            </button>
            <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown">
                <i class="fas fa-download"></i> Export
            </button>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="#" onclick="exportReport('dashboard')">
                    <i class="fas fa-file-pdf me-2"></i>Dashboard Report
                </a></li>
                <li><a class="dropdown-item" href="#" onclick="exportReport('customers')">
                    <i class="fas fa-users me-2"></i>Customer Data
                </a></li>
                <li><a class="dropdown-item" href="#" onclick="exportReport('sales')">
                    <i class="fas fa-chart-line me-2"></i>Sales Report
                </a></li>
            </ul>
        </div>
    </div>
</div>

<!-- Key Metrics Overview -->
<div class="row mb-4">
    <div class="col-md-3 mb-3">
        <div class="card bg-primary text-white h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4 class="mb-0">@Model.TotalBooks</h4>
                        <p class="mb-0">Total Books</p>
                        <small class="opacity-75">@Model.LowStockBooks with low stock</small>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-book fa-2x opacity-75"></i>
                    </div>
                </div>
                <div class="mt-2">
                    <a href="@Url.Action("Index", "BookManagement")" class="btn btn-light btn-sm">
                        <i class="fas fa-cogs me-1"></i> Manage Books
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 mb-3">
        <div class="card bg-success text-white h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4 class="mb-0">@Model.TotalCustomers</h4>
                        <p class="mb-0">Total Customers</p>
                        <small class="opacity-75">@(Model.TotalCustomers > 0 ? Math.Round((double)Model.TotalCustomers * 0.15) : 0) new this month</small>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-users fa-2x opacity-75"></i>
                    </div>
                </div>
                <div class="mt-2">
                    <a href="@Url.Action("Index", "CustomerManagement")" class="btn btn-light btn-sm">
                        <i class="fas fa-user-cog me-1"></i> Manage Customers
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 mb-3">
        <div class="card bg-info text-white h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4 class="mb-0">@Model.TotalOrders</h4>
                        <p class="mb-0">Total Orders</p>
                        <small class="opacity-75">@Model.PendingOrders pending</small>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-shopping-cart fa-2x opacity-75"></i>
                    </div>
                </div>
                <div class="mt-2">
                    <a href="@Url.Action("Index", "OrderManagement")" class="btn btn-light btn-sm">
                        <i class="fas fa-clipboard-list me-1"></i> Manage Orders
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 mb-3">
        <div class="card bg-warning text-dark h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4 class="mb-0">$@Model.TotalRevenue.ToString("N0")</h4>
                        <p class="mb-0">Total Revenue</p>
                        <small>This month: $@((Model.TotalRevenue * 0.12m).ToString("N0"))</small>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-dollar-sign fa-2x"></i>
                    </div>
                </div>
                <div class="mt-2">
                    <button type="button" class="btn btn-dark btn-sm" onclick="showRevenueDetails()">
                        <i class="fas fa-chart-bar me-1"></i> View Details
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions Section -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-light">
                <h5 class="mb-0">
                    <i class="fas fa-bolt me-2"></i>Quick Actions
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <div class="d-grid">
                            <a asp-controller="BookManagement" asp-action="Create" class="btn btn-primary">
                                <i class="fas fa-plus-circle me-2"></i>Add New Book
                            </a>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="d-grid">
                            <a asp-controller="CustomerManagement" asp-action="Index" class="btn btn-success">
                                <i class="fas fa-users me-2"></i>View All Customers
                            </a>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="d-grid">
                            <a asp-controller="OrderManagement" asp-action="Index" class="btn btn-info">
                                <i class="fas fa-shopping-cart me-2"></i>Process Orders
                            </a>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="d-grid">
                            <button type="button" class="btn btn-warning" onclick="generateReports()">
                                <i class="fas fa-file-alt me-2"></i>Generate Reports
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Main Content Row -->
<div class="row">
    <!-- Left Column -->
    <div class="col-lg-8">
        <!-- Recent Orders -->
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="fas fa-shopping-cart me-2"></i>Recent Orders
                </h5>
                <a asp-controller="OrderManagement" asp-action="Index" class="btn btn-sm btn-outline-primary">
                    View All <i class="fas fa-arrow-right ms-1"></i>
                </a>
            </div>
            <div class="card-body">
                @if (Model.RecentOrders.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Order #</th>
                                    <th>Customer</th>
                                    <th>Amount</th>
                                    <th>Status</th>
                                    <th>Date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in Model.RecentOrders.Take(5))
                                {
                                    <tr>
                                        <td>
                                            <a asp-controller="OrderManagement" asp-action="Details" asp-route-id="@order.OrderId" class="text-decoration-none">
                                                #@order.OrderNumber
                                            </a>
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="avatar-sm bg-light rounded-circle me-2 d-flex align-items-center justify-content-center">
                                                    <i class="fas fa-user text-muted"></i>
                                                </div>
                                                <div>
                                                    <div class="fw-semibold">@order.Customer.User.FullName</div>
                                                    <small class="text-muted">@order.Customer.User.Email</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="fw-semibold">$@order.TotalAmount.ToString("F2")</span>
                                        </td>
                                        <td>
                                            <span class="badge bg-@(order.OrderStatus switch {
                                                OrderStatus.Pending => "warning",
                                                OrderStatus.Processing => "info",
                                                OrderStatus.Shipped => "primary",
                                                OrderStatus.Delivered => "success",
                                                OrderStatus.Cancelled => "danger",
                                                _ => "secondary"
                                            })">
                                                @order.OrderStatus
                                            </span>
                                        </td>
                                        <td>
                                            <small class="text-muted">@order.OrderDate.ToString("MMM dd, yyyy")</small>
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm" role="group">
                                                <a asp-controller="OrderManagement" asp-action="Details" asp-route-id="@order.OrderId" 
                                                   class="btn btn-outline-primary btn-sm" title="View Details">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                @if (order.OrderStatus == OrderStatus.Pending)
                                                {
                                                    <button type="button" class="btn btn-outline-success btn-sm" 
                                                            onclick="updateOrderStatus(@order.OrderId, 'Processing')" title="Process Order">
                                                        <i class="fas fa-play"></i>
                                                    </button>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-shopping-cart fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">No recent orders</h5>
                        <p class="text-muted">Orders will appear here as they are placed.</p>
                    </div>
                }
            </div>
        </div>

        <!-- Customer Activity -->
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="fas fa-users me-2"></i>Recent Customer Activity
                </h5>
                <a asp-controller="CustomerManagement" asp-action="Index" class="btn btn-sm btn-outline-success">
                    Manage Customers <i class="fas fa-arrow-right ms-1"></i>
                </a>
            </div>
            <div class="card-body">
                <div class="timeline">
                    <div class="timeline-item">
                        <div class="timeline-marker bg-success"></div>
                        <div class="timeline-content">
                            <h6 class="mb-1">New customer registration</h6>
                            <p class="mb-1 text-muted">John Smith registered and placed first order</p>
                            <small class="text-muted">2 hours ago</small>
                        </div>
                    </div>
                    <div class="timeline-item">
                        <div class="timeline-marker bg-info"></div>
                        <div class="timeline-content">
                            <h6 class="mb-1">Customer review submitted</h6>
                            <p class="mb-1 text-muted">Mary Johnson left a 5-star review for "Clean Code"</p>
                            <small class="text-muted">4 hours ago</small>
                        </div>
                    </div>
                    <div class="timeline-item">
                        <div class="timeline-marker bg-warning"></div>
                        <div class="timeline-content">
                            <h6 class="mb-1">Customer support ticket</h6>
                            <p class="mb-1 text-muted">David Wilson requested order status update</p>
                            <small class="text-muted">6 hours ago</small>
                        </div>
                    </div>
                </div>
                <div class="text-center mt-3">
                    <a asp-controller="CustomerManagement" asp-action="Statistics" class="btn btn-outline-secondary btn-sm">
                        <i class="fas fa-chart-line me-1"></i> View Customer Analytics
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Right Column -->
    <div class="col-lg-4">
        <!-- Top Selling Books -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-star me-2"></i>Top Selling Books
                </h5>
            </div>
            <div class="card-body">
                @if (Model.TopSellingBooks.Any())
                {
                    <div class="list-group list-group-flush">
                        @foreach (dynamic book in Model.TopSellingBooks.Take(5))
                        {
                            @* <div class="list-group-item d-flex justify-content-between align-items-center px-0">
                                <div class="flex-grow-1">
                                    <h6 class="mb-1">@book.Title</h6>
                                    <small class="text-muted">by @book.Author</small>
                                </div>
                                <div class="text-end">
                                    <span class="badge bg-primary rounded-pill">@book.TotalSold</span>
                                    <br><small class="text-muted">sold</small>
                                </div>
                            </div> *@
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-3">
                        <i class="fas fa-book fa-2x text-muted mb-2"></i>
                        <p class="text-muted mb-0">No sales data available</p>
                    </div>
                }
            </div>
        </div>

        <!-- Customer Statistics -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-users me-2"></i>Customer Insights
                </h5>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-6 mb-3">
                        <div class="border rounded p-3">
                            <h4 class="text-success mb-0">@(Model.TotalCustomers > 0 ? Math.Round((double)Model.TotalCustomers * 0.15) : 0)</h4>
                            <small class="text-muted">New This Month</small>
                        </div>
                    </div>
                    <div class="col-6 mb-3">
                        <div class="border rounded p-3">
                            <h4 class="text-info mb-0">@(Model.TotalCustomers > 0 ? Math.Round((double)Model.TotalCustomers * 0.75) : 0)</h4>
                            <small class="text-muted">Active Customers</small>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="border rounded p-3">
                            <h4 class="text-warning mb-0">@(Model.TotalOrders > 0 && Model.TotalCustomers > 0 ? Math.Round((double)Model.TotalOrders / Model.TotalCustomers, 1) : 0)</h4>
                            <small class="text-muted">Avg Orders/Customer</small>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="border rounded p-3">
                            <h4 class="text-primary mb-0">$@(Model.TotalCustomers > 0 ? Math.Round(Model.TotalRevenue / Model.TotalCustomers, 0) : 0)</h4>
                            <small class="text-muted">Avg Customer Value</small>
                        </div>
                    </div>
                </div>
                <div class="d-grid gap-2 mt-3">
                    <a asp-controller="CustomerManagement" asp-action="Statistics" class="btn btn-outline-primary btn-sm">
                        <i class="fas fa-chart-bar me-1"></i> Detailed Analytics
                    </a>
                    <a asp-controller="CustomerManagement" asp-action="Export" class="btn btn-outline-secondary btn-sm">
                        <i class="fas fa-download me-1"></i> Export Customer Data
                    </a>
                </div>
            </div>
        </div>

        <!-- System Alerts -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-bell me-2"></i>System Alerts
                </h5>
            </div>
            <div class="card-body">
                <div class="alert alert-warning alert-sm py-2" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <strong>@Model.LowStockBooks</strong> books have low stock levels
                </div>
                <div class="alert alert-info alert-sm py-2" role="alert">
                    <i class="fas fa-clock me-2"></i>
                    <strong>@Model.PendingOrders</strong> orders awaiting processing
                </div>
                <div class="alert alert-success alert-sm py-2 mb-0" role="alert">
                    <i class="fas fa-check-circle me-2"></i>
                    System running smoothly
                </div>
            </div>
        </div>

        <!-- Quick Stats -->
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-chart-pie me-2"></i>Quick Stats
                </h5>
            </div>
            <div class="card-body">
                <div class="row small">
                    <div class="col-6 text-center mb-2">
                        <strong>Server Time</strong><br>
                        <span id="serverTime">@DateTime.Now.ToString("HH:mm:ss")</span>
                    </div>
                    <div class="col-6 text-center mb-2">
                        <strong>Database</strong><br>
                        <span class="text-success">Connected</span>
                    </div>
                    <div class="col-6 text-center">
                        <strong>Version</strong><br>
                        <span>v1.0.0</span>
                    </div>
                    <div class="col-6 text-center">
                        <strong>Uptime</strong><br>
                        <span>99.9%</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Update server time every second
            setInterval(function() {
                const now = new Date();
                $('#serverTime').text(now.toLocaleTimeString());
            }, 1000);
            
            // Initialize tooltips
            $('[data-bs-toggle="tooltip"]').tooltip();
            
            // Auto-refresh dashboard data every 5 minutes
            setInterval(function() {
                location.reload();
            }, 300000); // 5 minutes
        });
        
        // Order management functions
        function updateOrderStatus(orderId, status) {
            if (confirm(`Update order status to ${status}?`)) {
                $.post('@Url.Action("UpdateStatus", "OrderManagement")', { 
                    orderId: orderId, 
                    status: status 
                }, function(data) {
                    if (data.success) {
                        showAlert('Order status updated successfully!', 'success');
                        setTimeout(function() {
                            location.reload();
                        }, 1000);
                    } else {
                        showAlert('Error: ' + data.message, 'danger');
                    }
                }).fail(function() {
                    showAlert('An error occurred while updating order status.', 'danger');
                });
            }
        }
        
        // Revenue details modal/page
        function showRevenueDetails() {
            showAlert('Revenue analytics feature coming soon!', 'info');
        }
        
        // Report generation
        function generateReports() {
            const reportModal = `
                <div class="modal fade" id="reportModal" tabindex="-1">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Generate Reports</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body">
                                <div class="list-group">
                                    <a href="#" class="list-group-item list-group-item-action" onclick="exportReport('sales')">
                                        <i class="fas fa-chart-line me-2"></i>Sales Report
                                    </a>
                                    <a href="#" class="list-group-item list-group-item-action" onclick="exportReport('customers')">
                                        <i class="fas fa-users me-2"></i>Customer Report
                                    </a>
                                    <a href="#" class="list-group-item list-group-item-action" onclick="exportReport('inventory')">
                                        <i class="fas fa-boxes me-2"></i>Inventory Report
                                    </a>
                                    <a href="#" class="list-group-item list-group-item-action" onclick="exportReport('financial')">
                                        <i class="fas fa-dollar-sign me-2"></i>Financial Report
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            `;
            
            $('body').append(reportModal);
            new bootstrap.Modal(document.getElementById('reportModal')).show();
            
            // Clean up modal after it's hidden
            $('#reportModal').on('hidden.bs.modal', function () {
                $(this).remove();
            });
        }
        
        // Export functionality
        function exportReport(type) {
            showAlert(`Generating ${type} report...`, 'info');
            
            // Close any open modals
            $('.modal').modal('hide');
            
            setTimeout(function() {
                showAlert(`${type.charAt(0).toUpperCase() + type.slice(1)} report generation feature coming soon!`, 'warning');
            }, 1000);
        }
        
        // Alert helper function
        function showAlert(message, type = 'info') {
            const alertClass = `alert-${type}`;
            const iconClass = type === 'danger' ? 'fa-exclamation-triangle' : 
                             type === 'success' ? 'fa-check-circle' : 
                             type === 'warning' ? 'fa-exclamation-triangle' : 'fa-info-circle';
            
            const alert = $(`
                <div class="alert ${alertClass} alert-dismissible fade show" role="alert">
                    <i class="fas ${iconClass} me-2"></i>
                    ${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            `);
            
            $('.border-bottom').after(alert);
            
            // Auto dismiss after 5 seconds
            setTimeout(() => {
                alert.alert('close');
            }, 5000);
        }
    </script>
    
    <style>
        .avatar-sm {
            width: 32px;
            height: 32px;
            font-size: 0.875rem;
        }
        
        .timeline {
            position: relative;
            padding-left: 20px;
        }
        
        .timeline::before {
            content: '';
            position: absolute;
            left: 9px;
            top: 0;
            bottom: 0;
            width: 2px;
            background: #e9ecef;
        }
        
        .timeline-item {
            position: relative;
            margin-bottom: 20px;
        }
        
        .timeline-item:last-child {
            margin-bottom: 0;
        }
        
        .timeline-marker {
            position: absolute;
            left: -15px;
            top: 0;
            width: 12px;
            height: 12px;
            border-radius: 50%;
            border: 2px solid #fff;
            box-shadow: 0 0 0 2px #e9ecef;
        }
        
        .timeline-content {
            margin-left: 10px;
        }
        
        .card {
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            border: 1px solid rgba(0, 0, 0, 0.125);
        }
        
        .card-header {
            background-color: #f8f9fa;
            border-bottom: 1px solid rgba(0, 0, 0, 0.125);
            font-weight: 600;
        }
        
        .alert-sm {
            padding: 0.5rem 0.75rem;
            font-size: 0.875rem;
        }
        
        .badge {
            font-size: 0.75rem;
        }
        
        .btn-group-sm > .btn, .btn-sm {
            padding: 0.25rem 0.5rem;
            font-size: 0.875rem;
        }
        
        .opacity-75 {
            opacity: 0.75;
        }
        
        .fw-semibold {
            font-weight: 600;
        }
        
        .list-group-item {
            border-left: none;
            border-right: none;
        }
        
        .list-group-item:first-child {
            border-top: none;
        }
        
        .list-group-item:last-child {
            border-bottom: none;
        }
        
        .text-decoration-none:hover {
            text-decoration: underline !important;
        }
        
        .bg-light {
            background-color: #f8f9fa !important;
        }
        
        .border {
            border: 1px solid #dee2e6 !important;
        }
        
        .rounded {
            border-radius: 0.375rem !important;
        }
        
        .h-100 {
            height: 100% !important;
        }
        
        @@media (max-width: 768px) {
            .timeline {
                padding-left: 15px;
            }
            
            .timeline-marker {
                left: -10px;
                width: 8px;
                height: 8px;
            }
            
            .timeline-content {
                margin-left: 5px;
            }
        }
    </style>
}