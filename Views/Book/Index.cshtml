@model IEnumerable<BookStoreEcommerce.Models.Entities.Book>
@{
    ViewData["Title"] = "Books";
}

<div class="row mb-4">
    <div class="col-md-6">
        <h2>Books</h2>
    </div>
    <div class="col-md-6">
        <form asp-action="Search" method="get" class="d-flex">
            <input type="text" name="searchTerm" class="form-control me-2" placeholder="Search books..." value="@ViewBag.SearchTerm">
            <button type="submit" class="btn btn-outline-primary">Search</button>
        </form>
    </div>
</div>

<div class="row mb-3">
    <div class="col-md-12">
        <h5>Categories:</h5>
        <a asp-action="Index" class="btn btn-outline-secondary btn-sm me-2">All</a>
        @if (ViewBag.Categories != null)
        {
            @foreach (var category in ViewBag.Categories)
            {
                <a asp-action="Index" asp-route-categoryId="@category.CategoryId" 
                   class="btn btn-outline-secondary btn-sm me-2">@category.Name</a>
            }
        }
    </div>
</div>

<div class="row">
    @foreach (var book in Model)
    {
        <div class="col-md-4 col-lg-3 mb-4">
            <div class="card h-100">
                <img src="@(book.ImageUrl ?? "/images/no-image.jpg")" class="card-img-top" alt="@book.Title" style="height: 250px; object-fit: cover;">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@book.Title</h5>
                    <p class="card-text text-muted">by @book.Author</p>
                    <p class="card-text flex-grow-1">@(book.Description?.Length > 100 ? book.Description.Substring(0, 100) + "..." : book.Description)</p>
                    <div class="mt-auto">
                        <p class="card-text"><strong>$@book.Price</strong></p>
                        <p class="card-text"><small class="text-muted">Stock: @book.StockQuantity</small></p>
                        <div class="btn-group w-100" role="group">
                            <a asp-action="Details" asp-route-id="@book.BookId" class="btn btn-outline-primary">Details</a>
                            @if (book.StockQuantity > 0)
                            {
                                <button type="button" class="btn btn-primary" onclick="addToCart(@book.BookId)">Add to Cart</button>
                            }
                            else
                            {
                                <button type="button" class="btn btn-secondary" disabled>Out of Stock</button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Any())
{
    <div class="text-center">
        <h4>No books found</h4>
        <p>Try adjusting your search criteria.</p>
    </div>
}

@section Scripts {
    <script>
        function addToCart(bookId) {
            $.post('/Cart/AddToCart', { bookId: bookId }, function(data) {
                if (data.success) {
                    alert(data.message);
                } else {
                    alert(data.message);
                }
            });
        }
    </script>
}