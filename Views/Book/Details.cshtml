@model BookStoreEcommerce.Models.Entities.Book
@{
    ViewData["Title"] = Model.Title;
}

<div class="row">
    <div class="col-md-4">
        <img src="@(Model.ImageUrl ?? "/images/no-image.jpg")" class="img-fluid" alt="@Model.Title" style="max-height: 400px;">
    </div>
    <div class="col-md-8">
        <h1>@Model.Title</h1>
        <h4 class="text-muted">by @Model.Author</h4>
        
        <div class="row mt-3">
            <div class="col-md-6">
                <p><strong>Price:</strong> $@Model.Price</p>
                <p><strong>Category:</strong> @Model.Category.Name</p>
                <p><strong>Publisher:</strong> @Model.Publisher</p>
                <p><strong>Language:</strong> @Model.Language</p>
            </div>
            <div class="col-md-6">
                <p><strong>ISBN:</strong> @Model.ISBN</p>
                <p><strong>Pages:</strong> @Model.Pages</p>
                <p><strong>Published:</strong> @Model.PublishedDate?.ToString("yyyy")</p>
                <p><strong>Stock:</strong> @Model.StockQuantity</p>
            </div>
        </div>
        
        <div class="mt-3">
            <h5>Description</h5>
            <p>@Model.Description</p>
        </div>
        
        <div class="mt-4">
            @if (Model.StockQuantity > 0)
            {
                <div class="row">
                    <div class="col-md-4">
                        <div class="input-group">
                            <input type="number" id="quantity" class="form-control" value="1" min="1" max="@Model.StockQuantity">
                            <button class="btn btn-primary" onclick="addToCart(@Model.BookId)">Add to Cart</button>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <button class="btn btn-secondary" disabled>Out of Stock</button>
            }
        </div>
    </div>
</div>

<hr>

<div class="row mt-5">
    <div class="col-md-12">
        <h4>Customer Reviews</h4>
        @if (Model.Feedbacks.Any(f => f.IsApproved))
        {
            @foreach (var feedback in Model.Feedbacks.Where(f => f.IsApproved))
            {
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <h6 class="card-title">@feedback.Customer.User.FullName</h6>
                            <div>
                                @for (int i = 1; i <= 5; i++)
                                {
                                    <span class="@(i <= feedback.Rating ? "text-warning" : "text-muted")">★</span>
                                }
                            </div>
                        </div>
                        <p class="card-text">@feedback.Comment</p>
                        <small class="text-muted">@feedback.CreatedDate.ToString("MMM dd, yyyy")</small>
                    </div>
                </div>
            }
        }
        else
        {
            <p>No reviews yet.</p>
        }
        
        <div class="mt-3">
            <a asp-controller="Feedback" asp-action="Create" asp-route-bookId="@Model.BookId" class="btn btn-outline-primary">Write a Review</a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function addToCart(bookId) {
            var quantity = document.getElementById('quantity').value;
            $.post('/Cart/AddToCart', { bookId: bookId, quantity: quantity }, function(data) {
                if (data.success) {
                    alert(data.message);
                } else {
                    alert(data.message);
                }
            });
        }
    </script>
}