@section Scripts {
    <script>
        $(document).ready(function() {
            // Character counter for message
            $('#message').on('input', function() {
                const length = $(this).val().length;
                $('#messageCount').text(length);
                
                if (length < 10) {
                    $('#messageCount').removeClass('text-success').addClass('text-muted');
                } else {
                    $('#messageCount').removeClass('text-muted').addClass('text-success');
                }
            });
            
            // Show/hide order number field based on inquiry type
            $('#inquiryType').on('change', function() {
                const inquiryType = $(this).val();
                if (inquiryType === 'Order' || inquiryType === 'Return/Exchange') {
                    $('#orderNumberGroup').show();
                    $('#orderNumber').attr('required', true);
                } else {
                    $('#orderNumberGroup').hide();
                    $('#orderNumber').removeAttr('required').val('');
                }
            });
            
            // Form submission
            $('#contactForm').on('submit', function(e) {
                e.preventDefault();
                
                if (this.checkValidity()) {
                    // Simulate form submission
                    const submitButton = $(this).find('button[type="submit"]');
                    const originalText = submitButton.html();
                    
                    // Show loading state
                    submitButton.prop('disabled', true)
                             .html('<i class="fas fa-spinner fa-spin me-2"></i>Sending...');
                    
                    // Simulate API call
                    setTimeout(() => {
                        // Reset button
                        submitButton.prop('disabled', false).html(originalText);
                        
                        // Show success modal
                        new bootstrap.Modal(document.getElementById('successModal')).show();
                        
                        // Reset form
                        this.reset();
                        $(this).removeClass('was-validated');
                        $('#messageCount').text('0').removeClass('text-success').addClass('text-muted');
                        $('#orderNumberGroup').hide();
                    }, 2000);
                }
                
                $(this).addClass('was-validated');
            });
            
            // Reset form button
            $('#contactForm button[type="reset"]').on('click', function() {
                $('#contactForm').removeClass('was-validated');
                $('#messageCount').text('0').removeClass('text-success').addClass('text-muted');
                $('#orderNumberGroup').hide();
            });
            
            // Phone number formatting
            $('#phone').on('input', function() {
                let value = $(this).val().replace(/\D/g, '');
                if (value.length >= 6) {
                    value = value.replace(/(\d{3})(\d{3})(\d{4})/, '($1) $2-$3');
                } else if (value.length >= 3) {
                    value = value.replace(/(\d{3})(\d{0,3})/, '($1) $2');
                }
                $(this).val(value);
            });
            
            // Social links hover effects
            $('.social-links a').hover(
                function() {
                    $(this).addClass('shadow-sm').css('transform', 'scale(1.1)');
                },
                function() {
                    $(this).removeClass('shadow-sm').css('transform', 'scale(1)');
                }
            );
        });
    </script>
    
