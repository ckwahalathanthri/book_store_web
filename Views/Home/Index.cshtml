@model IEnumerable<BookStoreEcommerce.Models.Entities.Book>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to BookStore</h1>
    <p>Discover amazing books and expand your knowledge.</p>
</div>

<div class="row">
    <div class="col-md-12">
        <h2>Featured Books</h2>
        <div class="row">
            @foreach (var book in Model)
            {
                <div class="col-md-3 mb-4">
                    <div class="card">
                        <img src="@(book.ImageUrl ?? "/images/no-image.jpg")" class="card-img-top" alt="@book.Title" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">@book.Title</h5>
                            <p class="card-text">@book.Author</p>
                            <p class="card-text"><strong>$@book.Price</strong></p>
                            <a asp-controller="Book" asp-action="Details" asp-route-id="@book.BookId" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>